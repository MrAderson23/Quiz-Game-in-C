void sum(int i,int i1,int i2,int i3,int i4,int i5,int i6,int i7,int i8,int i9){
    int sum;
    sum=i+i1+i2+i3+i4+i5+i6+i7+i8+i9;
    printf("\n***********************************************************************************************************************************************************************\n");
    printf("\nΠόντοι Ερωτήσεων:\tΑπαντήσεις Ερωτήσεων:\n");
    printf("----------------\t--------------------");
    printf("\n 1η: %d πόντοι\t\t 1η: Αμαζόνιος\n 2η: %d πόντοι\t\t 2η: 9\n 3η: %d πόντοι\t\t 3η: Όταν δυσκολεύεσαι να δεις από κοντά\n 4η: %d πόντοι\t\t 4η: Alison Krauss\n 5η: %d πόντοι\t\t 5η: Καναδάς\n 6η: %d πόντοι\t\t 6η: Kevin Systrom\n 7η: %d πόντοι\t\t 7η: Περίπου 500 εκατομμύρια τετραγωνικά χιλιόμετρα\n 8η: %d πόντοι\t\t 8η: Thomas Edison\n 9η: %d πόντοι\t\t 9η: 15\n10η: %d πόντοι\t\t10η: Περίπου το 2500 π.Χ.\n",i,i1,i2,i3,i4,i5,i6,i7,i8,i9);
    printf("\n***********************************************************************************************************************************************************************\n");
    if (sum>=16) {
                printf("\nΣυγχαρητήρια,τα πήγατε πολύ καλα!\nΤο αποτέλεσμα σας στο quiz είναι ίσο με %d/20",sum);
            }
            else if (sum<=9) {
                printf("\nΔυστηχώς δεν τα πήγατε και πολύ καλα!\nΤο αποτέλεσμα σας στο quiz είναι ίσο με %d/20",sum);
            }
            else {
                printf("\nΤα πήγατε αρκετά καλά!\nΤο αποτέλεσμα σας στο quiz είναι ίσο με %d/20",sum);
            }
             printf("\n\n\n\nQuiz Project by Adamos Petrou");
    return;
}

